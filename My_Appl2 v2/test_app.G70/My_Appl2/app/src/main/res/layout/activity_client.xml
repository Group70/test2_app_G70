<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".client">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8F5F5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="227dp"
            app:srcCompat="@drawable/cl1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/nom"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/nomfournisseur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints=""
                android:background="@drawable/reccleinput"
                android:drawableStart="@drawable/user2"
                android:ems="10"
                android:hint="@string/enter_name"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColorHint="#757575" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/prenom"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/prenomfournisseur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints=""
                android:background="@drawable/reccleinput"
                android:drawableStart="@drawable/user2"
                android:ems="10"
                android:hint="@string/entre_prenom"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColorHint="#757575" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:id="@+id/texttelephone"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Telephone"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/phonefournisseur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints=""
                android:background="@drawable/reccleinput"
                android:drawableStart="@drawable/ic_baseline_local_phone_24"
                android:ems="10"
                android:hint="@string/phone"
                android:inputType="number"
                android:minHeight="48dp"
                android:paddingLeft="2dp"
                android:textColorHint="#757575" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:id="@+id/textgmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Gmail"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/gmailfournisseur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints=""
                android:background="@drawable/reccleinput"
                android:drawableStart="@drawable/email"
                android:ems="10"
                android:hint="@string/gmaill"
                android:inputType="textLongMessage"
                android:minHeight="48dp"
                android:paddingLeft="5dp"
                android:textColorHint="#757575" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:textSize="22sp">

            <TextView
                android:id="@+id/textadress"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Adress"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/adressfournisseur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints=""
                android:background="@drawable/reccleinput"
                android:drawableStart="@drawable/ic_baseline_add_location_alt_24"
                android:ems="10"
                android:hint="@string/adresss"
                android:inputType=""
                android:minHeight="48dp"
                android:textColorHint="#757575" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingTop="25dp"

            android:paddingBottom="30dp">

            <Button
                android:id="@+id/btnajouterclient"
                android:layout_width="109dp"
                android:layout_height="58dp"
                android:background="@android:drawable/stat_sys_download_done"
                android:contentDescription="@string/AJOUTER"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>